

def CRON = ''
(JOB_NAME =~ /^EL\/(.*)\/(.*)\/(.*)/) { group, package, branch ->
    if (group == 'main' && branch ==~ "^(main|${package}.*\\.el[0-9_]+)\$") {
        CRON = '* * * * *'
    }
}


pipeline {
    agent any
    triggers {
        cron(CRON)
    }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World!'
                echo CRON
                echo JOB_NAME
                echo BRANCH_NAME
            }
        }
    }
}